<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookEasy.Views.StarterPage"
             BackgroundColor="#FF9C54">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="WELCOME!" TextColor="White" FontSize="60" FontAttributes="Bold" Margin="10" HorizontalOptions="CenterAndExpand" />
            <Label Text="Before we continue... " TextColor="#979797" FontSize="20" FontAttributes="Italic,Bold" Margin="0,0,0,0" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Are you a Vegetarian?" TextColor="Black" FontSize="50" FontAttributes="Bold" Margin="0,-20,0,40" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
            <ImageButton Source= "StartPageMeat.png" BackgroundColor="Transparent" Margin="0,0,0,20"/>
            <ImageButton Source= "StartPageVege.png" BackgroundColor="Transparent"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>